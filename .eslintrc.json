{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "rules": {
        "indent": ["error", 4],
        "max-lines-per-function": ["warn", { "max": 25, "skipBlankLines": true, "skipComments": true }],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-cond-assign": ["error", "always"],
        "require-atomic-updates": ["warn"]
    },
    "globals": {
        "Promise": "readonly"
    }
}